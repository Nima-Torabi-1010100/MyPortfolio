@model MyPortfolio.Models.Contact
<section id="contact">
    <div class="inner">
        <section>
            <div>
                @if (!string.IsNullOrWhiteSpace(ViewBag.error))
                {
                    <div class="alert-danger">
                        @ViewBag.error
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(ViewBag.success))
                {
                    <div class="alert-success">
                        @ViewBag.success
                    </div>
                }
            </div>
            <form method="post" action="#">
                <div class="fields">
                    <div class="field half">
                        <label asp-for="Name">Name</label>
                        <input type="text" asp-for="Name" class="invalid-feedback" />
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="field half">
                        <label asp-for="Email">Email</label>
                        <input type="text" asp-for="Email" class="invalid-feedback" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="field">
                        <label>Service</label>
                        <select class="custom-select" asp-for="Service">
                            <option value="0" selected="selected" class="invalid-feedback">Please Select The Desired Service...</option>
                            <span asp-validation-for="Service"></span>
                        </select>
                    </div>
                    <div class="field">
                        <label asp-for="Message" class="invalid-feedback">Message</label>
                        <textarea asp-for="Message" rows="6"></textarea>
                        <span asp-validation-for="Message" class="alert-danger"></span>
                    </div>
                </div>
                <ul class="actions">
                    <li><input type="submit" value="Send Message" class="primary" /></li>
                    <li><input type="reset" value="Clear" /></li>
                </ul>
            </form>
        </section>
        <section class="split">
            <section>
                <div class="contact-method">
                    <span class="icon solid alt fa-envelope"></span>
                    <h3>Email</h3>
                    <a href="#">nima993322@gmail.com</a>
                </div>
            </section>
            <section>
                <div class="contact-method">
                    <span class="icon solid alt fa-phone"></span>
                    <h3>Phone</h3>
                    <span>(+98) 914 932 9950</span>
                </div>
            </section>
            <section>
                <div class="contact-method">
                    <span class="icon solid alt fa-home"></span>
                    <h3>Address</h3>
                    <span>
                        Nima Torabi, Tabirz, Iran.
                    </span>
                </div>
            </section>
        </section>
    </div>
</section>